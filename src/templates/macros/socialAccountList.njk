{% from "components/lists/_macro.njk" import onsList %}

{% macro socialAccountList(global, inline = false) %}

    {% set itemsList = [] %}

    {% if global.twitterAccount %}
        {% set itemsList = (itemsList.push({
            "url": 'https://www.twitter.com/' + global.twitterAccount,
            "text": 'Twitter',
            "prefixIcon": 'twitter',
            "iconSize": 'xxl',
            "rel": 'noreferrer external'
        }), itemsList) %}
    {% endif %}

    {% if global.facebookAccount %}
        {% set itemsList = (itemsList.push({
            "url": 'https://www.facebook.com/' + global.facebookAccount,
            "text": 'Facebook',
            "prefixIcon": 'facebook',
            "iconSize": 'xxl',
            "rel": 'noreferrer external'
        }), itemsList) %}
    {% endif %}

    {% if global.instagramAccount %}
        {% set itemsList = (itemsList.push({
            "url": 'https://www.instagram.com/' + global.instagramAccount,
            "text": 'Instagram',
            "prefixIcon": 'instagram',
            "iconSize": 'xxl',
            "rel": 'noreferrer external'
        }), itemsList) %}
    {% endif %}

    {% if globals.linkedInAccount %}
        {% set itemsList = (itemsList.push({
            "url": 'https://www.linkedin.com/showcase/' + globals.linkedInAccount,
            "text": 'LinkedIn',
            "prefixIcon": 'linkedin',
            "iconSize": 'xxl',
            "rel": 'noreferrer external'
        }), itemsList) %}
    {% endif %}

    {{ onsList({
        "classes": 'list--bare list--inline list--icons' if inline
            else 'list--bare list--icons',
        "itemsList": itemsList
    }) }}
{% endmacro %}
